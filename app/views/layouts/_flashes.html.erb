<div id="flash-wrapper">
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:warning] %>
    <div class="warning">
      <%= flash[:warning] %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% end %>
</div>
